<!DOCTYPE html>
<html>
  <head>
    <title>Blogger</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="flash">
      <%= flash.notice %>
    </p>

  <div id="container">
    <div id="header">
      header
    </div>
    <div id="nav">
      <!-- Login block -->
      <div id = "login">
      <h6>
        <% if logged_in? %>
          <%= "Logged in as #{current_user.email}" %>
          <%= link_to "(logout)", logout_path %>
        <% else %>
          <%= link_to "(login)", login_path %>
        <% end %>
      </h6>
    </div>
      <div id="nav-links">
        <ul>
          <li><%= link_to "Home", articles_path, class: "new_article" %></li>
          <li><%= link_to "Create", new_article_path, class: "new_article" %></li>
          <li><%= link_to "Account", edit_author_path(current_user.id), class: "new_article" %></li>
        </ul>
      </div>
    </div>
    <div id="content">
      <%= yield %>
    </div>
  </div>
</body>
</html>
